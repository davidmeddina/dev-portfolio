<%= form_with(model: portfolio_item, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <%= form.fields_for :technologies do |technology_form| %>
  <div class="field">
    <ul>
      <li>
        <%= technology_form.label 'Technology name' %>
        <%= technology_form.text_field :name %>
      </li>
    </ul>
  </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
